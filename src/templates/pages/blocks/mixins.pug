mixin product-item(numImage)
	.product-item
		.product-item__pane
			img.product-item__image(src=`public/img/product0${numImage}.png`, alt="image" width="400" height="400")
		.product-item__tags
			.product-item__tag.product-item__tag--fill New
			.product-item__tag -30%
		.product-item__category Category
		a.product-item__title(href="#") Title product
		.product-item__price
			.product-item__current-price $850.00
			.product-item__old-price $900.99
		.product-item__raiting
			i.fas.fa-star.product-item__star
			i.fas.fa-star.product-item__star
			i.fas.fa-star.product-item__star
			i.far.fa-star.product-item__star
			i.far.fa-star.product-item__star
		.product-item__actions
			.action.action--circle
				i.far.fa-heart.action__icon
				span.action__description
			.action.action--circle
				i.fas.fa-map-signs.action__icon
				span.action__description
			.action.action--circle
				i.far.fa-eye.action__icon
				span.action__description
		.product-item__hidden-pane
			.product-item__btn.btn.btn--rounded.btn--dark-theme
				i.fas.fa-shopping-cart.product-item__btn-icon
				snap.product-item__text Add to cart

mixin product-item-column
	.product-item-col
		.product-item-col__pane
			img.product-item-col__image(src="public/img/product05.png", alt="image", width="300", height="200")
		.product-item-col__information
			.product-item-col__category Category
			a.product-item-col__title(href="#") Title product
			.product-item-col__price
				.product-item-col__current-price $800.00
				.product-item-col__old-price $900.99

mixin slider(title)
	section.section.section--p30
		.slider.container
			.slider__header
				span.slider__title=title
				.slider__links
					a.link.link--underline.link--grey-theme.link--active(href="#") Laptops
					a.link.link--underline.link--grey-theme(href="#") Smartphones
					a.link.link--underline.link--grey-theme(href="#") Cameras
					a.link.link--underline.link--grey-theme(href="#") Accessories
			.slider__body
				.slider__carousel.carousel
					.carousel__inner
						+product-item('9')
						+product-item('4')
						+product-item('3')
						+product-item('7')

mixin slider-column
	.slider
		.slider__header
			span.slider__title
		.slider__body
			.slider__carousel.carousel.carouser--column
				+product-item-column
				+product-item-column
				+product-item-column
				+product-item-column