extends ../index-layout

block content

	// Mixins
	include blocks/mixins

	// User info
	include blocks/topbar

	// Header
	include blocks/header

	// Navbar
	include blocks/nav

	// Collections
	include blocks/collections

	// New products
	section.section.section--p30
		.slider.container
			.slider__header
				span.slider__title New products
				.slider__links
					a.link.link--grey-theme.link--underline.link--active(href="#") Laptops
					a.link.link--grey-theme.link--underline(href="#") Smartphones
					a.link.link--grey-theme.link--underline(href="#") Cameras
					a.link.link--grey-theme.link--underline(href="#") Accessories
			.slider__body
				.slider__carousel.carousel
					.carousel__inner
						+product-item('9')
						+product-item('4')
						+product-item('3')
						+product-item('6')

	// Hot deal
	section.section.hot-deal
		.hot-deal__inner
